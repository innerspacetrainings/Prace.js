{
  "name": "prace",
  "version": "1.0.0",
  "description": "Github status check app for parsing a PR title against a regular expression",
  "source": "dist/main/index.js",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:innerspacetrainings/Prace.js.git"
  },
  "bugs": {
    "url": "https://github.com/innerspacetrainings/Prace.js/issues"
  },
  "author": {
    "name": "Innerspace GmbH",
    "url": "https://www.innerspace.eu/"
  },
  "maintainers": [
    {
      "name": "Javier Bullrich",
      "email": "javier.bullrich@innerspace.eu"
    }
  ],
  "private": true,
  "scripts": {
    "describe": "npm-scripts-info",
    "lint": "./node_modules/.bin/tslint -p tsconfig.json",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc mocha -r ts-node/register src/**/*.spec.ts",
    "cov": "run-s build test:unit cov:html && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && open-cli docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json docs/typedoc.json",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "trash build test",
    "prepare-release": "run-s reset test cov:check doc:html version"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "doc": "Generate HTML API documentation and open it in a browser",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "prace",
    "github app",
    "title",
    "regex title"
  ],
  "license": "MIT",
  "dependencies": {
    "@octokit/app": "^4.1.0",
    "@octokit/rest": "^16.34.1",
    "express": "^4.17.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.5"
  },
  "devDependencies": {
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@types/chai": "^4.2.4",
    "@types/express": "^4.17.2",
    "@types/lru-cache": "^5.1.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.5",
    "@types/request-promise": "^4.1.44",
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "cz-conventional-changelog": "^3.0.2",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "open-cli": "^5.0.0",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.js",
      "docs/*",
      "**/index.ts"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
